{
  "compilerOptions": {
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "noErrorTruncation": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsxFactory": "createElement",
    "lib": ["es5", "es6", "dom"],
    "types": ["inferno", "node"],
    "jsx": "react",
    "target": "es2015"
  },
  "include": [
    "src/**/*"
  ]
}
